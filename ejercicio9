public class ejercicio9 {
    public static void main(String[] args) {
        int n=5, suma=0;
        int num=1;
        for(int i=0;i<n;i++){
            suma+=num;
            num+=2;

        }
        System.out.println(suma);
        System.out.println(cuadrado(5));
    }
    public static int cuadrado(int n){
        if(n==1){
            return 1;
        }else{
            return (2*n-1)+cuadrado(n-1);
        }
    }
}
