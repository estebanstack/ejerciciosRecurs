class punto5 {
    public static void main(String[] args) {
       System.out.println(suma(0));
    }
    
    public static int suma(int n){
        if(n==2){
            return 2;
            
        }else if(n<=0){
            return 0;
        } 
        else{
            return n+suma(n-2);
        }
    }
}
